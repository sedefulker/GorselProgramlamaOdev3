
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.MainPage"
             Title="Ana Sayfa"
             BackgroundColor="{DynamicResource PageBackgroundColor}">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Çıkış"
                 IconImageSource="logout.png"
                 Order="Primary"
                 Priority="0"
                 Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>


    <StackLayout Padding="30" Spacing="20" HorizontalOptions="Center">
        <Label Text="ÖDEV-3" 
               FontSize="28" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               TextColor="Blue" />
        <Border
               WidthRequest="150"
               HeightRequest="150"
               Stroke="White"
               StrokeThickness="1"
               BackgroundColor="Transparent"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               StrokeShape="RoundRectangle 75">
           
            <Image Source="profile.png"
           Aspect="AspectFill"
           WidthRequest="150"
           HeightRequest="150">
            <Image.Clip>
                    <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75" />
                </Image.Clip>
            </Image>

        </Border>
        <Label x:Name="nameLabel" 
               FontSize="18" 
               HorizontalOptions="Center"
               TextColor="CornflowerBlue" />
        <Label x:Name="studentNumberLabel" 
               FontSize="16" 
               HorizontalOptions="Center"
               TextColor="CornflowerBlue" />
        <Label Text="Bartın Üniversitesi Bilgisayar Mühendisliği Bölümü" 
               FontSize="15" 
               HorizontalOptions="Center"
               TextColor="CornflowerBlue" />
    </StackLayout>
</ContentPage>