<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Light Theme Colors -->
            <Color x:Key="LightPageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightLabelTextColor">#1E1E1E</Color>
            <Color x:Key="LightSecondaryLabelTextColor">#5F6368</Color>
            <Color x:Key="LightButtonBackgroundColor">#E0E0E0</Color>
            <Color x:Key="LightButtonTextColor">#000000</Color>
            <Color x:Key="LightEntryTextColor">#000000</Color>
            <Color x:Key="LightEntryBackgroundColor">#F9F9F9</Color>
            <Color x:Key="LightBorderColor">#CCCCCC</Color>

            <!--  Dark Theme Colors -->
            <Color x:Key="DarkPageBackgroundColor">#121212</Color>
            <Color x:Key="DarkLabelTextColor">#FFFFFF</Color>
            <Color x:Key="DarkSecondaryLabelTextColor">#BBBBBB</Color>
            <Color x:Key="DarkButtonBackgroundColor">#1F1F1F</Color>
            <Color x:Key="DarkButtonTextColor">#FFFFFF</Color>
            <Color x:Key="DarkEntryTextColor">#FFFFFF</Color>
            <Color x:Key="DarkEntryBackgroundColor">#1E1E1E</Color>
            <Color x:Key="DarkBorderColor">#444444</Color>

            <!-- Dynamic Resources -->
            <AppThemeBinding x:Key="PageBackgroundColor"
                             Light="{StaticResource LightPageBackgroundColor}"
                             Dark="{StaticResource DarkPageBackgroundColor}" />

            <AppThemeBinding x:Key="LabelTextColor"
                             Light="{StaticResource LightLabelTextColor}"
                             Dark="{StaticResource DarkLabelTextColor}" />

            <AppThemeBinding x:Key="SecondaryLabelTextColor"
                             Light="{StaticResource LightSecondaryLabelTextColor}"
                             Dark="{StaticResource DarkSecondaryLabelTextColor}" />

            <AppThemeBinding x:Key="ButtonBackgroundColor"
                             Light="{StaticResource LightButtonBackgroundColor}"
                             Dark="{StaticResource DarkButtonBackgroundColor}" />

            <AppThemeBinding x:Key="ButtonTextColor"
                             Light="{StaticResource LightButtonTextColor}"
                             Dark="{StaticResource DarkButtonTextColor}" />

            <AppThemeBinding x:Key="EntryTextColor"
                             Light="{StaticResource LightEntryTextColor}"
                             Dark="{StaticResource DarkEntryTextColor}" />

            <AppThemeBinding x:Key="EntryBackgroundColor"
                             Light="{StaticResource LightEntryBackgroundColor}"
                             Dark="{StaticResource DarkEntryBackgroundColor}" />

            <AppThemeBinding x:Key="BorderColor"
                             Light="{StaticResource LightBorderColor}"
                             Dark="{StaticResource DarkBorderColor}" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
