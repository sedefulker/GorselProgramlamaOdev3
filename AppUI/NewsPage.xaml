<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.NewsPage"
             Title="Haberler"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Spacing="0">

        <!-- Kategori Barı -->
        <ScrollView Orientation="Horizontal" BackgroundColor="{DynamicResource CategoryBarBackgroundColor}">
            <StackLayout x:Name="categoryBar" Orientation="Horizontal" Spacing="6" Padding="10,6"/>
        </ScrollView>

        <!-- Yükleniyor Göstergesi -->
        <ActivityIndicator x:Name="busy"
                           IsVisible="False"
                           IsRunning="False"
                           Color="{DynamicResource ActivityIndicatorColor}"
                           HeightRequest="4"
                           Margin="0,2"/>

        <!-- Haber Listesi -->
        <ListView x:Name="newsList"
                  HasUnevenRows="True"
                  SeparatorVisibility="Default"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10" Spacing="10">
                            <!-- Haber Görseli -->
                            <Image Source="{Binding ImageUrl}"
                                   WidthRequest="100"
                                   HeightRequest="80"
                                   Aspect="AspectFill"
                                   BackgroundColor="{DynamicResource BorderBackgroundColor}" />
                            <!-- Yazılar -->
                            <StackLayout VerticalOptions="Center" Spacing="4">
                                <Label Text="{Binding Title}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{DynamicResource LabelTextColor}"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />
                                <Label Text="{Binding Source}"
                                       FontSize="12"
                                       TextColor="{DynamicResource SecondaryLabelTextColor}" />
                                <!-- Butonlar -->
                                <StackLayout Orientation="Horizontal" Spacing="6">
                                    <Button Text="Detay" 
                                            TextColor="{DynamicResource ButtonTextColor}"
                                            BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                            Clicked="DetailClicked"
                                            CommandParameter="{Binding .}"
                                            Padding="4,2"
                                            FontSize="12"/>
                                    <Button Text="Paylaş" 
                                            TextColor="{DynamicResource ButtonTextColor}"
                                            BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                            Clicked="ShareClicked"
                                            CommandParameter="{Binding .}"
                                            Padding="4,2"
                                            FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>