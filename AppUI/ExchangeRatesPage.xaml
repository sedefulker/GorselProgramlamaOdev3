<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.ExchangeRatesPage"
             Title="Güncel Kurlar"
             BackgroundColor="Black">

    <StackLayout Padding="20">
        <ActivityIndicator x:Name="loadingIndicator" IsRunning="True" IsVisible="True" Color="White"/>

        <Label Text="Döviz Kurları" FontSize="20" FontAttributes="Bold" TextColor="White" Margin="0,10,0,5"/>
        <ListView x:Name="currencyListView" BackgroundColor="Black" SeparatorColor="Gray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Code}" TextColor="White" FontSize="16"/>
                            <Label Grid.Column="1" Text="{Binding Alis}" TextColor="LightGray" FontSize="16" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="2" Text="{Binding Satis}" TextColor="LightGray" FontSize="16" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="3" Text="{Binding Fark}" TextColor="Orange" FontSize="16" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="4" Text="{Binding Yon}" TextColor="White" FontSize="16" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="Altın Fiyatları" FontSize="20" FontAttributes="Bold" TextColor="White" Margin="0,20,0,5"/>
        <ListView x:Name="goldListView" BackgroundColor="Black" SeparatorColor="Gray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Code}" TextColor="White" FontSize="16"/>
                            <Label Grid.Column="1" Text="{Binding Alis}" TextColor="LightGray" FontSize="16" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="2" Text="{Binding Satis}" TextColor="LightGray" FontSize="16" HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="3" Text="{Binding Degisim}" TextColor="Orange" FontSize="16" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>