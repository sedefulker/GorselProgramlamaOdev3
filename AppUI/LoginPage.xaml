<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.LoginPage"
             Title="Oturum Aç">
    <StackLayout Margin="10" Spacing="10" Padding="30">
        <Label Text="Email"/>
        <Entry Placeholder="Email" x:Name="loginEmailEntry" Keyboard="Email" Background="White" TextColor="Black"/>
        <Label Text="Şifre"/>
        <Entry Placeholder="Şifre" x:Name="loginPasswordEntry" IsPassword="True" Background="White" TextColor="Black"/>
        <Button Text="Oturum Aç" Clicked="OnLoginClicked" Background="White"
                            TextColor="Blue" FontAttributes="Bold" />
        <Button Text="Hesabım Yok, Kayıt Ol" Clicked="OnNavigateToRegister" Background="White"
                            TextColor="Blue" FontAttributes="Bold"/>
    </StackLayout>
</ContentPage>