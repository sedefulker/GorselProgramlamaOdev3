<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.RegisterPage"
             Title="Kayıt Ol">
    
    <StackLayout Margin="10" Spacing="10" Padding="30">
        <Label Text="Kullanıcı Adı"/>
        <Entry Placeholder="Kullanıcı Adı" x:Name="usernameEntry" Background="White" TextColor="Black"/>
        <Label Text="Email"/>
        <Entry Placeholder="Email" x:Name="emailEntry" Keyboard="Email" Background="White" TextColor="Black"/>
        <Label Text="Şifre"/>
        <Entry Placeholder="Şifre" x:Name="passwordEntry" IsPassword="True" Background="White" TextColor="Black"/>
        <Button Text="Kaydol" Clicked="OnRegisterClicked"  Background="White" TextColor="Blue" FontAttributes="Bold"/>
    </StackLayout>
</ContentPage>