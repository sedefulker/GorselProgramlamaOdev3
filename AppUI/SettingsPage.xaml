<?xml version="1.0" encoding="utf-8" ?>
<!-- Tema ayarları sayfası -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.SettingsPage"
             Title="Tema Ayarları"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- Sayfa içeriği için dikey düzen -->
    <StackLayout Padding="20">

        <!-- Tema seçimi başlığı -->
        <Label Text="Tema Seçimi" FontSize="20" />

        <!-- Açık/Koyu tema arasında geçiş yapılmasını sağlayan anahtar -->
        <Switch x:Name="ThemeSwitch" Toggled="OnThemeSwitchToggled"/>

    </StackLayout>

</ContentPage>
