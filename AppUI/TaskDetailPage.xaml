<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.TaskDetailPage"
             Title="Görev Detayı"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Görev Bilgileri" 
               FontAttributes="Bold" 
               FontSize="24" 
               TextColor="{DynamicResource LabelTextColor}"/>
        <Entry x:Name="titleEntry" 
               Placeholder="Başlık" 
               TextColor="{DynamicResource EntryTextColor}" 
               BackgroundColor="{DynamicResource EntryBackgroundColor}"/>
        <Editor x:Name="detailsEditor" 
                Placeholder="Açıklama" 
                HeightRequest="100" 
                TextColor="{DynamicResource EntryTextColor}"
                BackgroundColor="{DynamicResource EntryBackgroundColor}"/>
        <DatePicker x:Name="datePicker" 
                    TextColor="{DynamicResource LabelTextColor}"/>
        <TimePicker x:Name="timePicker" 
                    TextColor="{DynamicResource LabelTextColor}"/>
        <HorizontalStackLayout>
            <Button Text="Kaydet" 
                    Clicked="OnSaveTaskClicked"
                    BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                    TextColor="{DynamicResource ButtonTextColor}"/>
            <Button Text="İptal" 
                    Clicked="OnCancelClicked"
                    BackgroundColor="{DynamicResource CancelButtonBackgroundColor}" 
                    TextColor="{DynamicResource ButtonTextColor}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>