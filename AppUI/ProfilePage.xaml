<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUI.ProfilePage"
             Title="Profil"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <StackLayout Padding="30" HorizontalOptions="Center">
        <Image x:Name="profileImage" WidthRequest="150" HeightRequest="150" />
        <Label x:Name="nameLabel" Text="Ad Soyad" FontSize="18"
               TextColor="{DynamicResource LabelTextColor}" />
        <Label x:Name="emailLabel" Text="Email" FontSize="16"
               TextColor="{DynamicResource LabelTextColor}" />
        <Button Text="Çıkış Yap" Clicked="OnLogoutClicked"
                BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                TextColor="{DynamicResource ButtonTextColor}"/>
    </StackLayout>
</ContentPage>